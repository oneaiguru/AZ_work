{
  "manifest_version": 3,
  "name": "job_meta",
  "version": "0.1.0",
  "description": "Parse job markdown files and augment metadata via ChatGPT.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://chat.openai.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}
