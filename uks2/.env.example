# Frontend
NEXT_PUBLIC_SITE_URL=https://uks.delightsoft.ru
NEXT_PUBLIC_CMS_URL=https://uks.delightsoft.ru/admin
CMS_INTERNAL_URL=http://directus:8055
NEXT_PUBLIC_ASSETS_URL=https://uks.delightsoft.ru/admin/assets

# Nginx TLS (самоподписанный сертификат генерируется автоматически, боевой — скопируйте в ops/nginx/certs)
NGINX_SSL_DOMAIN=uks.delightsoft.ru
NGINX_SSL_DAYS=365

# Directus
DIRECTUS_ADMIN_EMAIL=admin@uks.irkutsk.ru
DIRECTUS_ADMIN_PASSWORD=change-me
# При необходимости можно указать статический токен администратора вместо пары email/пароль
# Токен создаётся в Directus: войдите под супер-админом → аватар → «Настройки профиля» → вкладка «Токены» → «Создать токен».
# DIRECTUS_ACCESS_TOKEN=static-admin-token
DIRECTUS_KEY=replace-with-generated-key
DIRECTUS_SECRET=replace-with-generated-secret
DIRECTUS_PUBLIC_URL=https://uks.delightsoft.ru/admin
DIRECTUS_INTERNAL_URL=http://directus:8055
DIRECTUS_HOST=0.0.0.0
DIRECTUS_PORT=8055
DIRECTUS_EMAIL_TRANSPORT=sendmail
DIRECTUS_LOG_LEVEL=info
DIRECTUS_CACHE_ENABLED=true
DIRECTUS_CACHE_REDIS=redis://redis:6379/0
DIRECTUS_CORS_ENABLED=true
DIRECTUS_CORS_ORIGIN=*
DIRECTUS_STORAGE_LOCATIONS=local
DIRECTUS_COOKIE_DOMAIN=.uks.delightsoft.ru
DIRECTUS_REFRESH_COOKIE_SECURE=true
DIRECTUS_REFRESH_COOKIE_SAME_SITE=lax
DIRECTUS_REFRESH_COOKIE_PATH=/admin
DIRECTUS_APP_ICON=extensions/app/public/favicon.svg
# Укажите ID публичной роли Directus, если API запрещает запросы к /roles/public (например, в облачных окружениях)
# Значение по умолчанию для стандартной установки Directus — 00000000-0000-0000-0000-000000000001
DIRECTUS_PUBLIC_ROLE_ID=00000000-0000-0000-0000-000000000001

# Database
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=uks2_cms
DATABASE_USERNAME=uks2
DATABASE_PASSWORD=replace-with-generated-db-password
DATABASE_SSL=false

# Postgres UI (pgAdmin)
PGADMIN_DEFAULT_EMAIL=pgadmin@uks.irkutsk.ru
PGADMIN_DEFAULT_PASSWORD=replace-with-generated-pgadmin-password
PGADMIN_BASE_PATH=/db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO object storage
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=replace-with-generated-minio-access-key
MINIO_ROOT_PASSWORD=replace-with-generated-minio-secret-key
MINIO_BUCKET_PUBLIC=uks2-public
MINIO_BUCKET_PRIVATE=uks2-private
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

